= provide(:title, 'Sign up')
%h1 注册
.row
  .span6.offset3
    = form_for(@user) do |f|
      = render 'shared/error_messages'
      = f.label :name,"用户名"
      = f.text_field :name
      = f.label :email,"Email地址"
      = f.text_field :email
      = f.label :password
      = f.password_field :password
      = f.label :password_confirmation, "密码确认"
      = f.password_field :password_confirmation
      = f.submit "注册帐号", :class => "btn btn-large btn-primary"
